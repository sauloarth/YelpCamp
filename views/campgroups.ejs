<% include partials/header %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            
        <h1>CampGroup's List</h1>
        <p>Hand-picked campgrounds for all over the world.</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgroups/new">Add new Campgrounds</a>
        </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campground</h3>
        </div>
    </div>
    
    <div class="row">
        
        <% camps.forEach(camp => { %>
            <div>
                <div class="col-md-3 col-sm-6"> 
                    <div class="thumbnail">
                        <img src="<%= camp.image %>">
                    </div>
                    <div class="caption" style="display:flex; flex-wrap: wrap;">
                        <h4><%= camp.name %></h4>
                    </div>
                    <div>
                        <a class="btn btn-primary" href="/campgroups/<%= camp._id %>">More info</a>
                    </div>
                </div>
            </div>
        <% }) %>
        
    </div>
</div>
<% include partials/footer %>