<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
                
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= foundCamp.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$ 9.00/night</h4>
                    <h4><a><%= foundCamp.name %></a></h4>
                    <p><%= foundCamp.description %></p>
                    <p><em>Submitted By <%= foundCamp.author.username %> </em></p>
                    <% if(currentUser && foundCamp.author.id.equals(currentUser.id)){ %>
                        <a class="btn btn-warning" href="/campgrounds/<%= foundCamp.id %>/edit">Edit Campground</a>
                        <form id="delete-form" action="/campgrounds/<%= foundCamp.id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%= foundCamp.id %>/comments/new" class="btn btn-lg btn-primary">Comment</a>
                </div>
                <hr>
                <% foundCamp.comments.forEach(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <p>
                               <strong><%=comment.author.username%></strong> 
                               <span class="pull-right">
                                   10 days ago
                               </span>
                                    <p>"<%=comment.text%>"</p> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        
        </div>
    </div>
</div>



<% include ../partials/footer %>