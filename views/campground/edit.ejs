<% include ../partials/header %>
<div class="container">
<h1 style="text-align: center">Update <%= campground.name %></h1>
    <div style="width:30%; margin: 20px auto">
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Camp Name:</label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="image">Description:</label>
                <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update">
            </div>
        </form>
        <a href="/campgrounds/<%= campground.id %>">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>