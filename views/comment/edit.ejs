<% include ../partials/header %>
<div class="container">
<h1 style="text-align: center">Edit Comment</h1>
    <div style="width:30%; margin: 20px auto">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update post">
            </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>