<% include partials/header %>
<div class="container">
<h1 style="text-align: center">Create a New Camp</h1>
    <div style="width:30%; margin: 20px auto">
        <form action="/campgroups" method="POST">
            <div class="form-group">
                <label for="name">Camp Name:</label>
                <input class="form-control" type="text" name="name" placeholder="Camp Name">
            </div>
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <label for="image">Description:</label>
                <input class="form-control" type="text" name="desc" placeholder="CampGround Description">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Save">
            </div>
        </form>
        <a href="/campgroups">Go Back</a>
    </div>
</div>


